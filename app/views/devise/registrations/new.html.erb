<h2>Sign up</h2>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div><%= f.input :first_name %></div><br/>

<div><%= f.input :last_name %></div><br/>

 <div><%= f.input :profile_name %></div><br/>

  <div><%= f.input :email %><br /></div>

  <div><%= f.input :password %><br />

  <div><%= f.input :password_confirmation %><br />

  <div><%= f.submit "Sign up" %></div>
<% end %>

<%= render "devise/shared/links" %>
